<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="attachmentDialog" title="{i18n>Attachment Details}" contentWidth="100%" afterClose=".onDialogClose">
        <content>
            <TextArea id="attachmentTextArea" width="100%" rows="10" editable="false" visible="false"/>
             <Image id="attachmentImage" width="100%" visible="false"/> 
             
        </content>
        <beginButton>
            <Button text="{i18n>close}" press=".onDialogClose" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>